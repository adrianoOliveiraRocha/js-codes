<!DOCTYPE html>
<html lang="en">
<head>
  <title>Bootstrap Example</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="bootstrap/css/bootstrap.min.css">
  <script src="bootstrap/js/jquery.min.js"></script>
  <script src="bootstrap/js/bootstrap.min.js"></script>
</head>
<body>

<div class="container">
  <h2>Basic Table</h2>
  <table class="table">
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Description</th>
      </tr>
    </thead>
    <tbody>
      <% for(product of paginator.content) {%>
      <tr>
        <td><%=product.id%></td>
        <td><%=product.name%></td>
        <td><%=product.description%></td>
      </tr>      
      <% } %>
    </tbody>
  </table>
</div>

<% if(paginator.nPages < 7){ %>
  <%-include('pagination/few_pages.ejs')%>
<% } else {%>
  <%-include('pagination/many_pages.ejs')%>
<% } %>

</body>
</html>
